{
  "name": "@psykostudio/textformater",
  "version": "0.0.1",
  "description": "compose text layouts with opentype and draw them with the engine of your choice.",
  "main": "dist/textformater.min.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "webpack --mode=production",
    "build": "npm run build:types && npm run build:js",
    "watch": "webpack --mode=development --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/psykostudio/TextFormater.git"
  },
  "author": "Olivier de Testa",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/psykostudio/TextFormater/issues"
  },
  "homepage": "https://github.com/psykostudio/TextFormater#readme",
  "dependencies": {
    "opentype.js": "^0.11.0"
  },
  "devDependencies": {
    "@babel/core": "7.12.16",
    "@babel/plugin-proposal-class-properties": "7.12.13",
    "@babel/plugin-proposal-object-rest-spread": "7.12.13",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "7.12.16",
    "@babel/preset-typescript": "7.12.16",
    "@types/opentype.js": "0.7.2",
    "babel-loader": "8.2.2",
    "fork-ts-checker-webpack-plugin": "6.1.0",
    "typescript": "^4.2.3",
    "webpack": "^5.25.1",
    "webpack-cli": "^4.5.0"
  },
  "keywords": [
    "canvas",
    "text",
    "opentype",
    "font",
    "renderer",
    "format",
    "formater",
    "layout"
  ]
